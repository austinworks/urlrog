<h1>OG Image Lookup Service</h1>
<form phx-submit="updateQuery" id="query_form">
  <input type="text" value={@source_url} name="query_url" data-testid="query_data_entry">
  <input type="Submit" value="Look it up">
</form>
<p><%= @source_url %></p>
<p id="image_description">OG Image: <%= @image_url_description %></p>
<img src={@image_url} id="image_display">
